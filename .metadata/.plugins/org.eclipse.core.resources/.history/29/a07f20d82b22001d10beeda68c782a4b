
public class Vehicle {

	this.size = size;
	
	this.currentVelocity = 0;
	this.currentDirection = 0;
}

	public void steer(int dircetion) {
		this.currentDirection += direction;
		System.out.println("Vehicle.steer(): Steering at " + currentDirection + " degrees. ");
